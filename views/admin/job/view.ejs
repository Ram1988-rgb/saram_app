                      <form action="" method="post" class="has-validation-callback">
                        <div class="row" style="margin-bottom:20px;">
                          <div class="col-md-4 col-xs-12">
                            <label> Job Name</label>
                          <input class="form-control form-control-solid" type="text" name="pname" id="name" value="<%=ADMININPUT.name%>">
                          
                          </div>
                          <div class="col-md-4 col-xs-12">
                            <label> User</label>
                            <select name="user_id" id="user_id" class="form-control">
                                <option value="">Select User</option>
                                <%for(var key=0;key<users.length;key++){%>				
                                <option value="<%=users[key]._id%>" <%if(users[key]._id ==ADMININPUT.userId ){%>selected="selected"<%}%>><%=users[key].name%>(<%=users[key].email%>)</option>
                                <%}%>
                            </select>
                          </div>
                          <div class="col-md-4 col-xs-12">
                            <label>Status</label>
                            <select class="form-control form-control-solid" name="pstatus" id="status">
                                <option value="">Please select</option>
                                <option value="1" <%if(ADMININPUT.status ==1 ){%>selected="selected"<%}%>>Active</option>
                                <option value="0" <%if(ADMININPUT.status == 0){%>selected="selected"<%}%>>Inactive</option>
                            </select>
                          </div>
                        </div>
        
                        <div class="row srch-btn-wrp">
                          <div class="col-md-12">
                            <div class="field_cover">
                              <input class="btn-search srch-btn" name="btn_submit" value="Search" type="submit">
                              <a href="/admin/job">
                                <input class="btn_clearsearch srch-btn" value="Clear Search" type="button">
                              </a>
                            </div>
                          </div>
                        </div>
                      </form>
                   </div>
  </div>
</section>
