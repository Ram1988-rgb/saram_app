<div class="row">
<div class="col-md-12">
<div class="panel panel-info">

<div class="panel-wrapper collapse in" aria-expanded="true">
<div class="panel-body">
<form action="" method="post" id="registration-form">
<div class="form-body">
<%include ../message/message.ejs%>
<hr>
<div class="row">
<div class="col-md-12">
<div class="form-group row">
<label class="control-label col-xs-12 col-md-3 "><%=__('Category')%> *</label>
<div class="form-group col-xs-12 col-md-9">
<input type="text" id="category" name="category" data-validation="required" class="form-control" placeholder="<%=__('Category')%>">
</div>
</div>
</div>
</div>

<div class="row">
<div class="col-md-12">
<div class="form-group row">
<label class="control-label col-xs-12 col-md-3 "><%=__('Name')%> *</label>
<div class="form-group col-xs-12 col-md-9">
<input type="text" id="name" name="name" data-validation="required" class="form-control" placeholder="<%=__('Name')%>">
</div>
</div>
</div>
</div>
<div class="row">
<div class="col-md-12">
<div class="form-group row">
<label class="control-label col-xs-12 col-md-3 "><%=__('Description')%> </label>
<div class="form-group col-xs-12 col-md-9">
<input type="textarea" id="description" name="description" rows="4" cols="50" class="form-control" placeholder="<%=__('Description')%>"></textarea>
</div>
</div>
</div>
</div>
  
<hr>


<div class="form-actions">
<button type="submit" class="btn btn-success btn-form-submit"> <i class="fa   fa-check"></i> Save</button>
