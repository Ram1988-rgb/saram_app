<div id="page-wrapper">
<div class="container-fluid">
<div class="row bg-title">
<div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
<h4 class="page-title"><%=__('Manage Static Pages')%></h4>
</div>
<div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
<ol class="breadcrumb">
<li><a href="/admin/dashboard"><%=__('Dashboard')%></a></li>
<li class="active">
<a href="/admin/staticpages"><%=__('Manage Static Pages')%></a>
</li>
<li class="active"><%=__('Edit')%></li>
</ol>
</div>
<!-- /.col-lg-12 -->
</div>
<div class="row">
<div class="col-md-12">
<div class="panel panel-info">

<div class="panel-wrapper collapse in" aria-expanded="true">
<div class="panel-body">
<form action="" method="post" id="registration-form">
<div class="form-body">
<%include ../message/message.ejs%>
<hr>

<div class="row">
<div class="col-md-12">
<div class="form-group row">
<label class="control-label col-xs-12 col-md-3 "><%=__('Title')%> *</label>
<div class="form-group col-xs-12 col-md-9">
<input type="text" id="title" name="title" data-validation="required" class="form-control" placeholder="<%=__('Title')%>" value="<%=detail.title?detail.title:''%>">
</div>
</div>
</div>
</div>

<div class="row">
	<div class="col-md-12">
	<div class="form-group row">
	<label class="control-label col-xs-12 col-md-3 "><%=__('Meta Title')%> *</label>
	<div class="form-group col-xs-12 col-md-9">
	<input type="text" id="meta_title" name="meta_title" data-validation="required" class="form-control" placeholder="<%=__('Meta Title')%>" value="<%=detail.meta_title?detail.meta_title:''%>">
	</div>
	</div>
	</div>
	</div>

<div class="row">
<div class="col-md-12">
<div class="form-group row">
<label class="control-label col-xs-12 col-md-3 "><%=__('Description')%> </label>
<div class="form-group col-xs-12 col-md-9">
<textarea class="form-control ckeditor" placeholder="Description" name="description" ><%= detail.description?detail.description:'' %></textarea>

</div>
</div>
</div>
</div>
<hr>


<div class="form-actions">
<button type="submit" class="btn btn-success btn-form-submit"> <i class="fa   fa-check"></i> Save</button>
<a href="/admin/staticpages" class="btn btn-default"><%=__('Cancel')%> </a>
</div>
</form>
</div>
</div>
</div>
</div>
</div>

</div>
