<div id="page-wrapper">
            <div class="container-fluid">
                <div class="row bg-title">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title"><%=__('System Setting Page')%></h4>
                    </div>
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                        <ol class="breadcrumb">
                            <li><a href="/admin/dashboard"><%=__('Dashboard')%></a></li>
                             <li class="active"><%=__('Manage System Setting')%></li>
                        </ol>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-info">

                            <div class="panel-wrapper collapse in" aria-expanded="true">
                                <div class="panel-body">
                                    <form action="" method="post" id="registration-form" enctype="multipart/form-data">
                                            <!-- from row -->
                                            <input type="hidden" name="id" value="<%=detail.id%>"%>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group row">
                                                        <label class="control-label col-xs-12 col-md-3"><%=__('Abuse key')%></label>
                                                         <div class="form-group col-xs-12 col-md-9">
                                                            <textarea class="form-control form-control-solid placeholder-no-fix"  autocomplete="off" placeholder="<%=__('Abuse key')%>" name="abuse_key"><%=detail ? detail.abuse_key : ''%></textarea>
                                                        </div>
                                                    </div>
                                                </div> 
                                            </div>                                            

                                            <hr>

                                        <div class="form-actions">
                                           <button type="submit" class="btn btn-success btn-form-submit"> <i class="fa   fa-check"></i> Save</button>
                                            
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->
         </div>
